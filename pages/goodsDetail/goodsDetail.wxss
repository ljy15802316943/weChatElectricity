.goodsDetail {
  overflow-x: hidden;
  overflow-y: scroll;
}
.swiper {
  width: 100%;
  height: 500rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.price {
  font-size: 32rpx;
  font-weight: 600;
  color: #FC5A50;
}
.detailBox {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
}
.detailBox .title {
  flex: 0.8;
  color: #000;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-left: 20rpx;
}
.detailBox .collect {
  height: auto;
  flex: 0.2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #999;
}
.detailBox .collect image {
  width: 45rpx;
  height: 45rpx;
  object-fit: cover;
}
.detailBox .collect .collectionText {
  color: #000;
  font-size: 30rpx;
}
.line {
  width: 100%;
  height: 5rpx;
  background: #ededed;
}
.imgTextTle {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 5rpx;
  color: #FC5A50;
}
.btn {
  position: fixed;
  bottom: 0;
}
.btmBox {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}
.btmBox .btmService,
.btmBox .btmShare,
.btmBox .btmShopping {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 20rpx;
}
.btmBox .btmService .icon-fenxiang,
.btmBox .btmShare .icon-fenxiang,
.btmBox .btmShopping .icon-fenxiang {
  position: absolute;
  top: 15rpx;
}
.btmBox .btmService button,
.btmBox .btmShare button,
.btmBox .btmShopping button {
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
}
.btmBox .btmShare .btnShareItem {
  font-size: 20rpx;
  margin-top: 38rpx;
}
.btmBox .addShopping {
  height: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background-color: #FFA300;
}
.btmBox .immediately {
  height: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background-color: #FB524C;
}
